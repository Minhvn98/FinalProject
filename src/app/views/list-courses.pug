// ====================== nvarbar =================================
nav.navbar.navbar-expand-md.fixed-top.navbar-dark.bg-dark
  .container.menu-top
    a.navbar-brand(href='/') LMS Page
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarTogglerDemo02' aria-controls='navbarTogglerDemo02' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarTogglerDemo02.collapse.navbar-collapse
      ul.navbar-nav
        if (!session.studentId)
          li.nav-item
            a.nav-link(href='/') Trang Chủ

        if (session.studentId)
          li.nav-item
            a.nav-link(href='/student') Trang Chủ

        li.nav-item.active
          a.nav-link(href='/courses/') Khóa Học
        li.nav-item
          a.nav-link(href='#contact') Liên Hệ
        
        if (!session.studentId || !session.lectureId || !session.adminId)
          li.nav-item
            a.nav-link(href='/auth/login') Đăng Nhập
        
        if (session.studentId || session.lectureId || session.adminId)
          li.nav-item
            a.nav-link(href='#' data-toggle='modal' data-target='#logoutModal') Đăng Xuất
          
// ======================== Courses =========================
section.courses.my-5
  .container
    h4.title.text-center Danh sa&#x301;ch kho&#x301;a ho&#x323;c
    .row
      ul#myTab.nav.nav-tabs(role='tablist')
        li.nav-item
          a#all-tab.nav-link.active(data-toggle='tab' href='#all' role='tab' aria-controls='home' aria-selected='true') All
        li.nav-item
          a#web-tab.nav-link(data-toggle='tab' href='#web' role='tab' aria-controls='profile' aria-selected='false') Web
        li.nav-item
          a#mobile-tab.nav-link(data-toggle='tab' href='#mobile' role='tab' aria-controls='contact' aria-selected='false') Mobile
        li.nav-item
          a#game-tab.nav-link(data-toggle='tab' href='#game' role='tab' aria-controls='contact' aria-selected='false') Game
      #myTabContent.tab-content
        #all.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='all-tab')
          .row
            each course in courses
              .col-12.col-md-6.col-lg-4.mb-5
                .card
                  img.card-img-top(src=course.image alt=course.name)
                  .card-body
                    h5.card-title=course.name
                    p.card-text
                      =course.description
                    a.btn.btn-success.btn-block(href='/courses/' + course.slug) Xem Chi  Tiết
            
          // end row
        // end tab all

        #web.tab-pane.fade(role='tabpanel' aria-labelledby='web-tab')
          .row
            each course in courses
              if course.categories == 'Lập trình Web'
                .col-12.col-md-6.col-lg-4.mb-5
                  .card
                    img.card-img-top(src=course.image alt=course.name)
                    .card-body
                      h5.card-title=course.name
                      p.card-text
                        =course.description
                      a.btn.btn-success.btn-block(href=`/courses/${course.slug}`) Xem Chi  Tiết
            // end row
        // end tab web

        #mobile.tab-pane.fade(role='tabpanel' aria-labelledby='mobile-tab')
          .row
            each course in courses
              if course.categories == 'Lập trình Mobile'
                .col-12.col-md-6.col-lg-4.mb-5
                  .card
                    img.card-img-top(src=course.image alt=course.name)
                    .card-body
                      h5.card-title=course.name
                      p.card-text
                        =course.description
                      a.btn.btn-success.btn-block(href='/courses/' + course.slug) Xem Chi  Tiết
            
            // end row

        // end tab mobile
        #game.tab-pane.fade(role='tabpanel' aria-labelledby='game-tab')
          .row
            each course in courses
              if course.categories == 'Lập trình Game'
                .col-12.col-md-6.col-lg-4.mb-5
                  .card
                    img.card-img-top(src=course.image alt=course.name)
                    .card-body
                      h5.card-title=course.name
                      p.card-text
                        =course.description
                      a.btn.btn-success.btn-block(href='/courses/' + course.slug) Xem Chi  Tiết
            // end row
        // end tab game
      // end content tab
    .pagination
      nav(aria-label='Page navigation example')
        ul.pagination
          li.page-item.disabled
            a.page-link(href='#' aria-label='Previous')
              span(aria-hidden='true') &laquo;
              span.sr-only Previous
          li.page-item
            a.page-link(href='#') 1
          li.page-item.disabled
            a.page-link(href='#' aria-label='Next')
              span(aria-hidden='true') &raquo;
              span.sr-only Next
    // end pagination
