                    .card-body
                      ul.list-content
                        each less, index in course.lessons
                          li.d-flex.justify-content-between.align-items-center
                            | #{index+1}. #{less.title}
                            a(href= less.path target="_blank")
                              i.fas.fa-file-download.mr-1
