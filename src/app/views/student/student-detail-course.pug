                  each ycl in course.youCanLearn
                    li
                      i.fas.fa-check
                      = ycl.content  
                  
            .content-course
              h4.my-3 N&ocirc;&#x323;i dung kho&#x301;a ho&#x323;c
              #accordionCourseDetails.accordion
                .card.shadow-sm
                  #headingOne.card-header.d-flex.justify-content-between
