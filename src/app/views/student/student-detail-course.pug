                      ul.list-content
                        each doc, index in course.documents
                          li.d-flex.justify-content-between.align-items-center
                            | #{index+1}. #{doc.title}
                            a(href= doc.path)
                              i.fas.fa-file-download.mr-1
                              | Ta&#x309;i xu&ocirc;&#x301;ng  
            .course-requiment.mt-4
