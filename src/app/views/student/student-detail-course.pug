                  li.media.border-bottom.py-2
                    img.mr-3.rounded-circle(src= cmt.idUser.avatar alt= cmt.idUser.name)
                    .media-body
                      h6.mt-0.mb-1= cmt.idUser.name
                      p= cmt.content
          .col-md-4.col-sm-12.right-content
