doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description' content='')
  meta(name='author' content='')
  title= student.name
  // Custom fonts for this template
  link(href='/fontawesome/css/all.min.css' rel='stylesheet' type='text/css')
  link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i' rel='stylesheet')
  // Custom styles for this template
  link(href='/bootstrap/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/css/student.css')
// Page Wrapper
#wrapper
  // Sidebar
  ul#accordionSidebar.navbar-nav.bg-gradient-primary.sidebar.sidebar-dark.accordion
    // Sidebar - Brand
    a.sidebar-brand.d-flex.align-items-center.justify-content-center(href=`/student/${student._id}`)
      .sidebar-brand-icon.rotate-n-15
        i.fas.fa-graduation-cap
      .sidebar-brand-text.mx-3 Student
    // Divider
    hr.sidebar-divider
    // Nav Item - Dashboard
    li.nav-item.active
      a.nav-link(href=`/student/${student._id}`)
        span Xin chào #{student.name} !
    // Divider
    hr.sidebar-divider
    // Nav Item - Pages Collapse Menu
    li.nav-item
      a.nav-link(href=`/student/${student._id}`)
        i.fas.fa-tachometer-alt
        span Dashboard
    // Divider
    hr.sidebar-divider

    li.nav-item
      a.nav-link.collapsed(href=`/courses` )
        i.fas.fa-book
        span Danh sách khóa học

    li.nav-item
      a.nav-link.collapsed(href=`/student/info/${student._id}` )
        i.far.fa-user
        span Th&ocirc;ng tin cu&#x309;a ba&#x323;n
      
    // Nav Item - Utilities Collapse Menu
    li.nav-item
      a.nav-link.collapsed(href='/student/homework/' + student._id)
        i.fas.fa-list
        span Bài tập đã nộp
    // Divider
    hr.sidebar-divider
    // Nav Item - Tables
    li.nav-item
      a.nav-link(href='#' data-toggle='modal' data-target='#logoutModal')
        i.fas.fa-sign-out-alt
        span &Dstrok;&abreve;ng xu&acirc;&#x301;t
    // Divider
    hr.sidebar-divider.d-none.d-md-block
    // Sidebar Toggler (Sidebar)
    .text-center.d-none.d-md-inline
      button#sidebarToggle.rounded-circle.border-0
  // End of Sidebar
  // Content Wrapper
  #content-wrapper.d-flex.flex-column
    // Main Content
    #content
      // Topbar
      nav.navbar.navbar-expand.navbar-light.bg-white.topbar.mb-4.static-top.shadow
        // Sidebar Toggle (Topbar)
        button#sidebarToggleTop.btn.btn-link.d-md-none.rounded-circle.mr-3
          i.fa.fa-bars
        // Topbar Search
        form.d-none.d-sm-inline-block.form-inline.mr-auto.ml-md-3.my-2.my-md-0.mw-100.navbar-search
          .input-group
            input.form-control.bg-light.border-0.small(type='text' placeholder='Search for...' aria-label='Search' aria-describedby='basic-addon2')
            .input-group-append
              button.btn.btn-primary(type='button')
                i.fas.fa-search.fa-sm
        // Topbar Navbar
        ul.navbar-nav.ml-auto
          // Nav Item - Search Dropdown (Visible Only XS)
          li.nav-item.dropdown.no-arrow.d-sm-none
            a#searchDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
              i.fas.fa-search.fa-fw
            // Dropdown - Messages
            .dropdown-menu.dropdown-menu-right.p-3.shadow.animated--grow-in(aria-labelledby='searchDropdown')
              form.form-inline.mr-auto.w-100.navbar-search
                .input-group
                  input.form-control.bg-light.border-0.small(type='text' placeholder='Search for...' aria-label='Search' aria-describedby='basic-addon2')
                  .input-group-append
                    button.btn.btn-primary(type='button')
                      i.fas.fa-search.fa-sm
          // Nav Item - Alerts
          li.nav-item.dropdown.no-arrow.mx-1
            a#alertsDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
              i.fas.fa-bell.fa-fw
              // Counter - Alerts
              span.badge.badge-danger.badge-counter
            // Dropdown - Alerts
            .dropdown-list.dropdown-menu.dropdown-menu-right.shadow.animated--grow-in(aria-labelledby='alertsDropdown')
              h6.dropdown-header
                | Thông báo
              #showAlerts
              a.dropdown-item.text-center.small.text-gray-500(href='#') Show All Alerts
          
          .topbar-divider.d-none.d-sm-block
          
          li.nav-item.dropdown.no-arrow
            a#userDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
              span.mr-2.d-none.d-lg-inline.text-gray-600.small= student.name
              img.img-profile.rounded-circle(src= student.avatar)
            // Dropdown - User Information
            .dropdown-menu.dropdown-menu-right.shadow.animated--grow-in(aria-labelledby='userDropdown')
              a.dropdown-item(href=`/student/info/${student._id}`)
                i.fas.fa-user.fa-sm.fa-fw.mr-2.text-gray-400
                |                   Profile
              .dropdown-divider
              a.dropdown-item(href='#' data-toggle='modal' data-target='#logoutModal')
                i.fas.fa-sign-out-alt.fa-sm.fa-fw.mr-2.text-gray-400
                |                   Đăng xuất
      // End of Topbar
      // Begin Page Content
      .container-fluid
        // Page Heading
        // Khóa học của tôi
        .d-sm-flex.align-items-center.justify-content-between.mb-4
          h1.h3.mb-0.text-gray-800 Khóa học của bạn
         
        // Content Row
        .row
          if student.listCourses.length == 0
            p.ml-4 Bạn chưa có khóa học nào

          each course in student.listCourses
            .col-xl-3.col-md-6.mb-4
              .card.shadow.h-100
                img.card-img-top(src= course.idCourse.image alt= course.idCourse.name)
                .card-body
                  h5.card-title=course.idCourse.name
                  p.card-text= course.idCourse.description
                  div
                    a.btn.btn-block.btn-success(href=`/student/courses/${course.idCourse.slug}`) Học ngay
          
          
            
          
        // Content Row
        // Khóa học gợi ý
        // Page Heading
        .d-sm-flex.align-items-center.justify-content-between.my-4
          h1.h3.mb-0.text-gray-800 Co&#x301; th&ecirc;&#x309; ba&#x323;n thi&#x301;ch
        // Content Row
        .row
          each course in requireCourses
            .col-xl-3.col-md-6.mb-4
              .card.shadow.h-100
                img.card-img-top(src=course.image alt=course.name)
                .card-body
                  h5.card-title= course.name
                  p.card-text= course.description
                  div
                    a.btn.btn-block.btn-success(href=`/courses/${course.slug}`) Xem chi tiết
          
        // Content Row
      // /.container-fluid
    // End of Main Content
    // Footer
    footer.sticky-footer.bg-white
      .container.my-auto
        .copyright.text-center.my-auto
          span Copyright &copy; Your Website 2020
    // End of Footer
  // End of Content Wrapper
// End of Page Wrapper
// Scroll to Top Button
a.scroll-to-top.rounded(href='#page-top')
  i.fas.fa-angle-up
// Logout Modal
include ../layouts/modal-logout.pug

// Bootstrap core JavaScript
script(src='/jquery/jquery.min.js')
script(src='/bootstrap/js/bootstrap.bundle.min.js')
// Core plugin JavaScript
script(src='/jquery-easing/jquery.easing.min.js')
// Custom scripts for all pages
script(src='/javascripts/sb-admin-2.min.js')
script(src="/javascripts/student.js")

