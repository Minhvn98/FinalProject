doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description' content='')
  meta(name='author' content='')
  title Thông tin cá nhân!
  // Custom fonts for this template
  link(href='/fontawesome/css/all.min.css' rel='stylesheet' type='text/css')
  link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i' rel='stylesheet')
  // Custom styles for this template
  link(href='/bootstrap/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/css/admin1.css ')
body#page-top
// Page Wrapper
#wrapper
  // Sidebar
  include ../layouts/students/sidebar.pug
  // Content Wrapper
  #content-wrapper.d-flex.flex-column
    // Main Content
    #content
      // Topbar
      include ../layouts/students/topbar.pug
      // Begin Page Content
      .container-fluid
        // Page Heading
        .d-sm-flex.align-items-center.justify-content-between.mb-4
          h3.h3.mb-0.text-gray-800 Bài tập đã nộp
        
        // Content Row
        .row.content.mt-5
          table.table
            thead
              tr
                th(scope='col') Tên môn học
                th(scope='col') Nội dung
                th(scope='col') File
                th(scope='col') Nhận xét của giảng viên
            tbody
              each homework in homeworks
                tr
                  td= homework.idCourse.name
                  td= homework.content
                  td 
                    a(href= homework.path) Tải xuống
                  if homework.comment
                    td= homework.comment
                  if !homework.comment  
                    td.font-italic.text-muted Chưa có nhận xét
            
                  
              
            
          .col-md-3.col-sx-0
        // end rowconent
      // /.container-fluid
    // End of Main Content
    // Footer
    footer.sticky-footer.bg-white
      .container.my-auto
        .copyright.text-center.my-auto
          span Copyright &copy; Your Website 2020
    // End of Footer
  // End of Content Wrapper
// End of Page Wrapper
// Scroll to Top Button
a.scroll-to-top.rounded(href='#page-top')
  i.fas.fa-angle-up
// Logout Modal
include ../layouts/modal-logout.pug

// Bootstrap core JavaScript
script(src='/jquery/jquery.min.js')
script(src='/bootstrap/js/bootstrap.bundle.min.js')
// Core plugin JavaScript
script(src='/jquery-easing/jquery.easing.min.js')
