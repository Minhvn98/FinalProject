// Add bài giảng
#addLesson.modal.fade(tabindex='-1' aria-labelledby='addLessonLabel' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        h5#addLessonLabel.modal-title Th&ecirc;m ba&#x300;i gia&#x309;ng
        button.close(type='button' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
