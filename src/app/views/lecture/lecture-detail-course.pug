// add you can learn
#addYouCanLearn.modal.fade(tabindex='-1' aria-labelledby='addYouCanLearnLabel' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        h5#addYouCanLearnLabel.modal-title Bạn sẽ học được gì?
