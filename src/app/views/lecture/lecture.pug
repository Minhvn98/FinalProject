doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description' content='')
  meta(name='author' content='')
  title=lect.name
  // Custom fonts for this template
  link(href='/fontawesome/css/all.min.css' rel='stylesheet' type='text/css')
  link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i' rel='stylesheet')
  // Custom styles for this template
  link(href='/bootstrap/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/css/lecture.css ')
body#page-top
// Page Wrapper
#wrapper
  // Sidebar
  include ../layouts/lecturers/sidebar.pug
  // Content Wrapper
  #content-wrapper.d-flex.flex-column
    // Main Content
    #content
      // Topbar
      include ../layouts/lecturers/topbar.pug
      // Begin Page Content
      .container-fluid
        // Page Heading
        .d-sm-flex.align-items-center.justify-content-between.mb-4
          h1.h3.mb-0.text-gray-800 Dashboard
        
        // Content Row
        .row
          .col-xl-3.col-md-6.mb-4
            .card.border-left-primary.shadow.h-100.py-2
              .card-body
                .row.no-gutters.align-items-center
                  .col.mr-2
                    .text-xs.font-weight-bold.text-primary.text-uppercase.mb-1 Kho&#x301;a ho&#x323;c cu&#x309;a ba&#x323;n
                    .h5.mb-0.font-weight-bold.text-gray-800 #{lect.listCourse.length} khóa học
                  .col-auto
                    i.fas.fa-book.fa-2x.text-gray-300
          .col-xl-3.col-md-6.mb-4
            .card.border-left-success.shadow.h-100.py-2
              .card-body
                .row.no-gutters.align-items-center
                  .col.mr-2
                    .text-xs.font-weight-bold.text-success.text-uppercase.mb-1 Học viên của bạn
                    .h5.mb-0.font-weight-bold.text-gray-800 #{lect.listStudent.length} học viên
                  .col-auto
                    i.fas.fa-user.fa-2x.text-gray-300
          // Earnings (Monthly) Card Example
          .col-xl-3.col-md-6.mb-4
            .card.border-left-info.shadow.h-100.py-2
              .card-body
                .row.no-gutters.align-items-center
                  .col.mr-2
                    .text-xs.font-weight-bold.text-info.text-uppercase.mb-1 Th&ocirc;ng ba&#x301;o
                    .row.no-gutters.align-items-center
                      .col-auto
                        .h5.mb-0.mr-3.font-weight-bold.text-gray-800#alert
                  .col-auto
                    i.fas.fa-bell.fa-2x.text-gray-300
          // Pending Requests Card Example
          .col-xl-3.col-md-6.mb-4
            a(href='/lecture/homework')
              .card.border-left-warning.shadow.h-100.py-2
                .card-body
                  .row.no-gutters.align-items-center
                    .col.mr-2
                      .text-xs.font-weight-bold.text-warning.text-uppercase.mb-1 Bài tập
                      .h5.mb-0.font-weight-bold.text-gray-800 Danh sách bài tập
                    .col-auto
                      i.fas.fa-list.fa-2x.text-gray-300
        // Content Row
        // Khóa học gần đây
        .d-sm-flex.align-items-center.justify-content-between.my-4
          h1#my-courses.h3.mb-0.text-gray-800 Khóa học của bạn
        // Content Row
        .row
          each course in lect.listCourse
            .col-xl-3.col-md-6.mb-4
              .card.shadow.h-100
                img.card-img-top(src=course.image alt=course.name)
                .card-body
                  h5.card-title= course.name
                  p.card-text= course.description
                  a.btn.btn-block.btn-success(href=`/lecture/courses/${course.slug}`) Xem chi ti&ecirc;&#x301;t
          
      // /.container-fluid
      // End of Main Content
      footer.sticky-footer.bg-white
        .container.my-auto
          .copyright.text-center.my-auto
            span Copyright &copy; Your Website 2020
    // End of Footer
  // End of Content Wrapper
// End of Page Wrapper
// Scroll to Top Button
a.scroll-to-top.rounded(href='#page-top')
  i.fas.fa-angle-up
// Logout Modal
include ../layouts/modal-logout.pug

// Bootstrap core JavaScript
script(src='/jquery/jquery.min.js')
script(src='/bootstrap/js/bootstrap.bundle.min.js')
// Core plugin JavaScript
script(src='/jquery-easing/jquery.easing.min.js')
// Custom scripts for all pages
script(src='/javascripts/sb-admin-2.min.js')
script(src='/javascripts/adlecture.js')


